#!/bin/bash

# Clear all log files in the logs directory

LOGS_DIR="./logs"

if [ ! -d "$LOGS_DIR" ]; then
    echo "Error: $LOGS_DIR directory does not exist"
    exit 1
fi

echo "Clearing log files in $LOGS_DIR..."

# Find all files in the logs directory and truncate them
find "$LOGS_DIR" -type f | while read -r logfile; do
    echo "Clearing: $logfile"
    > "$logfile"
done

echo "Done! All log files have been cleared."
