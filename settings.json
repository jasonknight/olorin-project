{
  "global": {
    "log_level": "INFO"
  },
  "state": {
    "db_path": "./data/state.db"
  },
  "kafka": {
    "bootstrap_servers": "localhost:9092",
    "send_timeout": 10,
    "max_retries": 3
  },
  "exo": {
    "base_url": "http://localhost:52415/v1",
    "api_key": "dummy-key",
    "model_name": null,
    "temperature": 0.7,
    "max_tokens": null
  },
  "broca": {
    "kafka_topic": "ai_out",
    "consumer_group": "tts-consumer-group",
    "auto_offset_reset": "earliest",
    "tts": {
      "model_name": "tts_models/en/vctk/vits",
      "speaker": "p272",
      "output_dir": "output"
    }
  },
  "cortex": {
    "input_topic": "prompts",
    "output_topic": "ai_out",
    "consumer_group": "exo-consumer-group",
    "auto_offset_reset": "earliest"
  },
  "hippocampus": {
    "input_dir": "~/Documents/AI_IN",
    "chromadb": {
      "host": "localhost",
      "port": 8000,
      "collection": "documents"
    },
    "embedding_model": "nomic-ai/nomic-embed-text-v1.5",
    "chunking": {
      "size": 4000,
      "overlap": 400,
      "min_size": 200
    },
    "poll_interval": 5,
    "tracking_db": "./hippocampus/data/tracking.db",
    "pdf_tracking_db": "./hippocampus/data/pdf_tracking.db",
    "ebook_tracking_db": "./hippocampus/data/ebook_tracking.db",
    "txt_tracking_db": "./hippocampus/data/txt_tracking.db",
    "office_tracking_db": "./hippocampus/data/office_tracking.db",
    "context_db": "./hippocampus/data/context.db",
    "reprocess_on_change": true,
    "delete_after_processing": false,
    "log_file": "./data/ingest.log"
  },
  "enrichener": {
    "input_topic": "ai_in",
    "output_topic": "prompts",
    "consumer_group": "enrichener-consumer-group",
    "auto_offset_reset": "earliest",
    "thread_pool_size": 3,
    "llm_timeout_seconds": 120,
    "decision_temperature": 0.1,
    "chromadb_query_n_results": 10,
    "context_db_path": "./hippocampus/data/context.db",
    "cleanup_context_after_use": false
  },
  "chat": {
    "history_enabled": true,
    "db_path": "./cortex/data/chat.db",
    "reset_patterns": [
      "/reset",
      "reset conversation",
      "new conversation",
      "start over",
      "clear history"
    ]
  },
  "control": {
    "api": {
      "enabled": true,
      "port": 8765,
      "host": "0.0.0.0"
    }
  },
  "tools": {
    "write": {
      "enabled": true,
      "port": 8770
    }
  }
}
