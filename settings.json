{
  "broca": {
    "auto_offset_reset": "earliest",
    "consumer_group": "tts-consumer-group",
    "kafka_topic": "ai_out",
    "tts": {
      "model_name": "tts_models/en/vctk/vits",
      "output_dir": "output",
      "speaker": "p272"
    }
  },
  "chat": {
    "db_path": "./cortex/data/chat.db",
    "history_enabled": true,
    "reset_patterns": [
      "/reset",
      "reset conversation",
      "new conversation",
      "start over",
      "clear history"
    ]
  },
  "control": {
    "api": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 8765
    }
  },
  "cortex": {
    "auto_offset_reset": "earliest",
    "consumer_group": "exo-consumer-group",
    "input_topic": "prompts",
    "output_topic": "ai_out"
  },
  "enrichener": {
    "auto_offset_reset": "earliest",
    "chromadb_query_n_results": 10,
    "cleanup_context_after_use": false,
    "consumer_group": "enrichener-consumer-group",
    "context_db_path": "./hippocampus/data/context.db",
    "decision_temperature": 0.1,
    "input_topic": "ai_in",
    "llm_timeout_seconds": 120,
    "output_topic": "prompts",
    "thread_pool_size": 3
  },
  "exo": {
    "api_key": "dummy-key",
    "base_url": "http://localhost:52415/v1",
    "max_tokens": null,
    "model_name": null,
    "temperature": 0.7
  },
  "global": {
    "log_level": "INFO"
  },
  "hippocampus": {
    "chromadb": {
      "collection": "documents",
      "host": "localhost",
      "port": 8000
    },
    "chunking": {
      "min_size": 200,
      "overlap": 400,
      "size": 4000
    },
    "context_db": "./hippocampus/data/context.db",
    "delete_after_processing": false,
    "ebook_tracking_db": "./hippocampus/data/ebook_tracking.db",
    "input_dir": "~/Documents/AI_IN",
    "log_file": "./data/ingest.log",
    "office_tracking_db": "./hippocampus/data/office_tracking.db",
    "pdf_tracking_db": "./hippocampus/data/pdf_tracking.db",
    "poll_interval": 5,
    "reprocess_on_change": true,
    "trackers": {
      "min_content_chars": 100,
      "min_content_density": 0.3,
      "min_word_count": 20,
      "notify_broca": true,
      "ollama": {
        "enabled": true,
        "model": "llama3.2:1b",
        "paths": [
          "ollama",
          "/usr/local/bin/ollama",
          "/opt/homebrew/bin/ollama",
          "/Applications/Ollama.app/Contents/Resources/ollama"
        ],
        "threshold": 0.5
      }
    },
    "tracking_db": "./hippocampus/data/tracking.db",
    "txt_tracking_db": "./hippocampus/data/txt_tracking.db"
  },
  "inference": {
    "backend": "ollama",
    "retry_count": 3,
    "retry_delay": 1.0,
    "timeout": 120
  },
  "kafka": {
    "bootstrap_servers": "localhost:9092",
    "max_retries": 3,
    "send_timeout": 10
  },
  "ollama": {
    "base_url": "http://localhost:11434",
    "max_tokens": null,
    "model_name": "deepseek-r1:70b",
    "temperature": 0.7
  },
  "state": {
    "db_path": "./data/state.db"
  },
  "tools": {
    "embeddings": {
      "document_prefix": "search_document: ",
      "enabled": true,
      "model": "nomic-ai/nomic-embed-text-v1.5",
      "port": 8771,
      "query_prefix": "search_query: "
    },
    "search": {
      "enabled": true,
      "port": 8772
    },
    "write": {
      "enabled": true,
      "port": 8770
    }
  }
}